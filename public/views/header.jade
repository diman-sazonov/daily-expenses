            span(ng-bind="user.username")
            .user-links(ng-class="{'hideUserLinks': hideUserLinks}")
                a(href="/expenses") Расходы
                a(href="/earnings") Доходы
                //a(href="/graphics") Графики
                //a(href="/plans") Планировка
                a(href="/debts") Долги
                hr
                a(ng-click="signOut()") Выйти
        a.btn.btn-success.pull-right(ng-if="!user.isAuth", href="/login") Войти
        a.btn.btn-default.pull-right(ng-if="!user.isAuth", href="/") Главная
        a.btn.btn-default.pull-right(ng-if="user.isAuth", href="/main") Главная